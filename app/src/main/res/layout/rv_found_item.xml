<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rv_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/rv_found_code_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="code_manufacturer"
            android:textColor="@drawable/rv_text_color" />

        <TextView
            android:id="@+id/rv_found_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="barcode"
            android:textColor="@drawable/rv_text_color" />

        <TextView
            android:id="@+id/rv_found_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="name"
            android:textColor="@color/main_accent" />

        <TextView
            android:id="@+id/rv_found_amount_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="amount_where"
            android:textColor="@drawable/rv_text_color"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally = "true"
            />
    </LinearLayout>


</LinearLayout>
