<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ТурбоСервисШтрихкод" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/main_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_accent</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>

    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">

        <item name="searchIcon">@drawable/ic_search</item>
        <!-- Go/commit button icon -->
        <item name="goIcon">@drawable/ic_search</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope</item>
    </style>
    <style name="Theme.ТурбоСервисШтрихкод.GradientThemeWhiteBottom" parent="Theme.ТурбоСервисШтрихкод.GradientTheme">
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>
    <style name="Theme.ТурбоСервисШтрихкод.GradientTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:windowBackground">@drawable/background_gradient_white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
    </style>
    <style name="Theme.ТурбоСервисШтрихкод.WhiteTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:windowBackground">@color/light_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.ТурбоСервисШтрихкод.BlueTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:windowBackground">@drawable/background_blue</item>
        <item name="android:statusBarColor">@color/main_accent</item>
        <item name="android:navigationBarColor">@color/main_accent</item>
    </style>

    <style name="Theme.ТурбоСервисШтрихкод.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/main_accent</item>
        <item name="android:navigationBarColor">@color/main_accent</item>
    </style>

    <style name="editTextRounded">

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="buttonRounded" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">
            @color/blue_button_shadow
        </item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">
            @color/blue_button_shadow
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_blue_button</item>
    </style>

    <style name="buttonPinTransparent" parent="Widget.AppCompat.ImageButton">
        <item name="android:minHeight">70dp</item>
        <item name="android:minWidth">67dp</item>
    </style>

    <style name="counterRv" parent="buttonRv">
        <item name="android:background">@color/white</item>
    </style>

    <style name="buttonRv" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_transparent_rv</item>
    </style>

    <style name="buttonMainColor" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/pin_num_button</item>
    </style>

    <style name="buttonPin" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:minWidth">67dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/pin_num_button</item>
    </style>

    <style name="bottomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_accent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/bottom_bar_button</item>
    </style>

    <style name="Theme.ТурбоСервисШтрихкод.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ТурбоСервисШтрихкод.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ТурбоСервисШтрихкод.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>