<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/pin_button_pressed" />
            <corners android:radius="8dp" />
            <padding android:top="24dp" android:bottom="24dp" android:left="20dp" android:right="30dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/pin_button" />
            <corners android:radius="8dp" />
            <padding android:top="24dp" android:bottom="24dp" android:left="20dp" android:right="30dp"/>
        </shape>
    </item>

</selector>